<h1>Foods#new</h1>
<%= form_with(model: @food, local: true) do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, required: true, placeholder: "Name" %>
  </div>
  <div class="field">
    <%= f.label :calorie %>
    <%= f.number_field :calorie, min: 0, step: 0.5 %>
  </div>
  <%= f.submit %>
<% end %>